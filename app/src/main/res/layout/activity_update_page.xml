<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_light"
    tools:context=".UpdatePage">

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="168dp"
        android:backgroundTint="@color/app_theme"
        android:text="Save"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/updateprogressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/app_theme"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateAddress" />

    <EditText
        android:id="@+id/updateAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/edit_text_backgroud"
        android:drawableStart="@drawable/baseline_home_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/app_theme"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter Your  Address"
        android:inputType="textMultiLine"
        android:paddingHorizontal="5dp"
        android:paddingVertical="15dp"
        android:textColor="#1A1A27"
        android:textColorHint="#653E3C3C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateMobilenumber" />

    <EditText
        android:id="@+id/updateName"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/edit_text_backgroud"
        android:drawableStart="@drawable/baseline_person"
        android:drawablePadding="8dp"
        android:drawableTint="@color/app_theme"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:paddingHorizontal="5dp"
        android:textColor="#1A1A27"
        android:textColorHint="#653E3C3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateEmail"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_backgroud"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/app_theme"
        android:ems="10"
        android:hint="Enter Your Maill"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="5dp"
        android:textColor="#1A1A27"
        android:textColorHint="#653E3C3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateName" />

    <EditText
        android:id="@+id/updateMobilenumber"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_backgroud"
        android:drawableStart="@drawable/baseline_phone_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/app_theme"
        android:ems="10"
        android:hint="Enter Your Moblile Number"
        android:inputType="text"
        android:paddingHorizontal="5dp"
        android:textColor="#1A1A27"
        android:textColorHint="#653E3C3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>